{
    "name": "Jobsaver",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Chrome extension that allows users to save their interested job posts from any job board.",
    "content_scripts": 
        [
            {
                "js": 
                [
                    "popup.js",
                    "monsterScript.js",
                    "indeedScript.js"
                ],
                "matches": ["<all_urls>"],
                "css": ["index.css"]
            }
        ],
    "background": 
    {
        "scripts": ["background.js"],
        "persistent": true
    },
    "page_action": 
    {
        "default_icon": 
        {
          "16": "./images/icon16.png",
          "24": "./images/icon24.png",
          "32": "./images/icon32.png",
          "48": "./images/icon48.png",
          "128": "./images/icon128.png"
        },
        "default_title": "Save This Job"
      },
      "icons": 
      {
        "16": "./images/icon16.png",
        "24": "./images/icon24.png",
        "32": "./images/icon32.png",
        "48": "./images/icon48.png",
        "128": "./images/icon128.png"
      },
      "permissions": 
      [
        "contextMenus",
        "tabs",
        "storage",
        "activeTab",
        "https://job-saver-be.herokuapp.com/jobPosts/addJob",
        "notifications"
      ],
      "content_security_policy": "script-src 'self' 'sha256-eIy+ZFmUSgAl2hneWuGKuPlIoZulI0x+WlWHlAkasAM='; object-src 'self'",
      "web_accessible_resources": ["*.html", "*.png", "*.js", "*.css"]
}
